<h1>Cart</h1>

{% form 'cart', cart %}
    {% if cart.empty? %}
    <p>Hey! your cart is empty.</p>
    {% else %}
        {% for item in cart.items %}
            <div>
                <img class="img-thumbnail" src="{{ item.image | image_url: width: 200}}"/>
                <h2>{{ item.title }}</h2>
                <p>{{ item.final_line_price | money }}</p>
                <input name="updates[]" value="{{ item.quantity }}">
                <a class="navbar-brand" href="{{ item.url_to_remove }}">Remove</a>
            </div>
        {% endfor %}

            <hr/>
        <p>Total: {{ cart.total_price | money }}</p>
        <button class="btn btn-warning" name="update" type="submit" >Update</button>
        <button class="btn btn-success" name="checkout" type="submit" >Checkout</button>
    {% endif %}
{% endform %}
        
   